{
  "name": "menu-matriarch",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "lint:scss": "stylelint \"**/*.scss\"",
    "lint:ts": "ng lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "e2e": "cypress run",
    "e2e:open": "cypress open",
    "watch": "ng build --watch --configuration development",
    "deploy:dev": "ng build --configuration development && firebase deploy --project menu-matriarch-dev --only hosting",
    "deploy:prod": "ng build --configuration production && firebase deploy --project menu-matriarch",
    "db:delete-account": "node scripts/dev/delete-account.js",
    "db:delete-data": "node scripts/dev/delete-data.js",
    "db:seed-data": "node scripts/dev/seed-data.js",
    "db:reset": "node scripts/dev/delete-all-accounts.js",
    "prepare": "husky install"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~13.0.2",
    "@angular/cdk": "^13.0.2",
    "@angular/common": "~13.0.2",
    "@angular/compiler": "~13.0.2",
    "@angular/core": "~13.0.2",
    "@angular/fire": "^7.0.4",
    "@angular/forms": "~13.0.2",
    "@angular/platform-browser": "~13.0.2",
    "@angular/platform-browser-dynamic": "~13.0.2",
    "@angular/router": "~13.0.2",
    "@fortawesome/angular-fontawesome": "^0.10.1",
    "@fortawesome/fontawesome-svg-core": "^1.2.35",
    "@fortawesome/free-brands-svg-icons": "^5.15.3",
    "@fortawesome/free-regular-svg-icons": "^5.15.3",
    "@fortawesome/free-solid-svg-icons": "^5.15.3",
    "@tinymce/tinymce-angular": "^4.2.4",
    "firebase": "^9.0.0",
    "lodash-es": "^4.17.21",
    "rxfire": "^6.0.0",
    "rxjs": "~6.6.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-builders/jest": "^13.0.2",
    "@angular-devkit/architect": "^0.1300.3",
    "@angular-devkit/build-angular": "~13.0.3",
    "@angular-eslint/builder": "12.7.0",
    "@angular-eslint/eslint-plugin": "12.7.0",
    "@angular-eslint/eslint-plugin-template": "12.7.0",
    "@angular-eslint/schematics": "12.7.0",
    "@angular-eslint/template-parser": "12.7.0",
    "@angular/cli": "~13.0.3",
    "@angular/compiler-cli": "~13.0.2",
    "@types/jest": "^27.4.0",
    "@types/lodash-es": "^4.17.5",
    "@types/node": "^12.11.1",
    "@typescript-eslint/eslint-plugin": "4.28.2",
    "@typescript-eslint/parser": "4.28.2",
    "cypress": "^9.4.1",
    "cypress-firebase": "^2.2.1",
    "eslint": "^7.26.0",
    "firebase-admin": "^9.0.0",
    "firebase-tools": "^9.0.0",
    "fuzzy": "^0.1.3",
    "husky": "^7.0.4",
    "inquirer": "^6.2.2",
    "inquirer-autocomplete-prompt": "^1.0.1",
    "jest": "^27.4.7",
    "jest-preset-angular": "^11.1.0",
    "jsonc-parser": "^3.0.0",
    "lint-staged": "^12.3.0",
    "open": "^7.0.3",
    "stylelint": "^14.2.0",
    "stylelint-config-standard-scss": "^3.0.0",
    "typescript": "~4.4.4"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --max-warnings=0",
      "jest --bail --findRelatedTests"
    ],
    "*.scss": "stylelint"
  }
}
